                    <Style TargetType="local:IDLabel" Class="IDLabel_BG_FG_Small">
                        <Setter Property="TextColor" Value="{DynamicResource FG}"/>
                        <Setter Property="FontFamily" Value="{DynamicResource GeneralFont}"/>
